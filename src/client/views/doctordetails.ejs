        </nav>

        <!--Desktop-->
        <nav class="head2">


        <img src="https://s3.ap-south-1.amazonaws.com/appdev.konfinity.com/css/tasks/Logo.jpg" alt="logo" />


        <ul>
            <a href="/doctor"> <li>Doctor</li></a>
            <a href="/hospital">  <li>Hospital</li></a>
            <a href="/treatment"> <li>Treatment</li></a>
             

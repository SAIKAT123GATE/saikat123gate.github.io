    <!--Section-->
    <section class="firstsec">
        <div class="signup">
            <h2>W E L C O M E</h2>
            <p>Complete Your profile to access the site</p>
            <hr>
            <form action="/docdetails" method="POST" enctype="multipart/form-data">

                <div class="label_input">
                
                    <label for="description">Describe Yourself</label>
                    <textarea id="description" name="description" rows="2" required>
                </textarea>
                
                </div>

                <div class="label_input">
                
                    <label for ="filename">Upload Your Profile Picture</label>
                    <input type="file" id="filename" name="image" required>
                </div>

                <div class="label_input">
                
                <label for ="hospitals">Your Hospital</label>
                <input name='hospitals' id="hospitals" class='some_class_name' placeholder='write some tags'  required>
                    </div>

                    <div class="label_input">    
                <label for ="achievements">Achievements</label>
                <input name='achievements' class='some_class_name' placeholder='write some tags' required>
                        </div>

                        <div class="label_input">
                <label for ="exp">Experience</label>
                <input type="number" id="exp" name="exp" >
                </div>
                
                
                <div class="label_input">
                <label for ="qualification">Qualification</label>
                <input name='qualification' id="qualification" class='some_class_name' placeholder='write some tags' required>
                    </div>

                    <div class="label_input">
                <label for ="awards">Awards</label>
                <input name='awards' id="awards" class='some_class_name' placeholder='write some tags' required>
                        </div>

                         <div class="label_input">

                <label for ="specialization">Specialization</label>
                <input name='specialization' id="specialization" class='some_class_name' placeholder='write some tags' required>
                            </div>

                            <div class="label_input">

                <label for ="fees">Your average Fees</label>
                <input type="number" id="fees"  name="fees" required>
                                </div>

                <div class="btn">
                    <button type="submit" class="btn_darkblue">S U B M I T</button>
                    <i class='fa fa-arrow-right'></i>
                </div>

            </form>

        </div>

    </section>
    <footer>
        <p>All Rights Reserved. &#169 tvastra <span>2020</span></p>
    </footer>

<script>
    
    
    var input = document.querySelector('input[name=hospitals]');

    var input2 = document.querySelector('input[name=achievements]');

<!DOCTYPE html>
<html>

<head>
    <title>Login</title>
    <link href="../css/reset.css" type="text/css" rel="stylesheet">
    <link href="../css/theme1.css" type="text/css" rel="stylesheet">
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    
    <link href="../css/login.css" rel="stylesheet" type="text/css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <link rel = "icon" href = 
"https://images.creativemarket.com/0.1.0/ps/2282307/910/607/m1/fpnw/wm0/11-01-.png?1487173609&s=c29fbda5784aaedecbaecaeb6d49039f&fmt=webp" 
        type = "image/x-icon">
    
</head>

<body>
    <div class="main-body">
        <header>
            <!--Mobile and tablet-->
            <nav class="head1">
                <figure>
                    <img src="https://s3.ap-south-1.amazonaws.com/appdev.konfinity.com/css/tasks/Logo.jpg" alt="logo" />
                </figure>
                <i class="fa fa-bars"></i>
            </nav>

            <!--Desktop-->
            <nav class="head2">


            <a href="/index" id="zero-width">    <img src="https://s3.ap-south-1.amazonaws.com/appdev.konfinity.com/css/tasks/Logo.jpg" alt="logo" /> </a>


                <ul>
                    <a href="/doctor">
                        <li>Doctor</li>
                    </a>
                    <a href="/hospital">
                        <li>Hospital</li>
                    </a>
                    <a href="/treatment">
                        <li>Treatment</li>
                    </a>

                    <a href="/aboutUs">
                        <li>About</li>
                    </a>
                </ul>
                <div>

                    <button class="btn_darkblue">Get a Quote</button>
                </div>

            </nav>
        </header>

        
        
        
        <% if (msg1.length>0) {%>
            <div id="loginmsg" class="fade-out animated ">
            <i id="tick"class="fa fa-close"></i>
            <ul>
                <li><span><%= msg1[0]%></span></li>
                <li><%= msg1[1]%></li>
            </ul>
            
            
            </div>
        
            <%}%>
        
            
        
        <!--Section-->
        <section class="firstsec">
            <div class="login">
                <div class="h2">
                    <h2>Login</h2>
                </div>

                <form action="/" method="POST">

                    <input class="input_field" placeholder="Enter Email" type="email" name="email" required autofocus>

                    <div class="password-with-eye">
                    <input class="password-field" placeholder="Enter Your Password" type="password" name="password" id="password"
                        required>
                        <i class="fa fa-eye" aria-hidden="true" id="togglePassword"></i>
                        </div>
                    <div class="otpsec">
                        <a href="/otpnumber">Login With OTP</a>
                        <a href="#">Forgot Password</a>
                    </div>
                    <button type="submit" class="btn_darkblue">LOGIN
                        <i class='fa fa-arrow-right'></i>
                    </button>


                </form>
                <p>Not registered?<a href="/signup"><span> Sign Up</span></a></p>
            </div>


        </section>
        <footer>
            <p>All Rights Reserved. &#169 tvastra <span>2020</span></p>
        </footer>
    </div>

    <script>
        const togglePassword = document.querySelector('#togglePassword');
        const password = document.querySelector('#password');
        togglePassword.addEventListener('click', function (e) {
    // toggle the type attribute
    const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
    password.setAttribute('type', type);
    // toggle the eye slash icon
    this.classList.toggle('fa-eye-slash');
});
    </script>
</body>

</html>
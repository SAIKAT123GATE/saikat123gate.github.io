"https://images.creativemarket.com/0.1.0/ps/2282307/910/607/m1/fpnw/wm0/11-01-.png?1487173609&s=c29fbda5784aaedecbaecaeb6d49039f&fmt=webp" 
        type = "image/x-icon">


</head>

<body>
    <header>
        <!--Mobile and tablet-->
        <nav class="head1">
            <figure>
                <img src="https://s3.ap-south-1.amazonaws.com/appdev.konfinity.com/css/tasks/Logo.jpg" alt="logo" />
            </figure>
            <i class="fa fa-bars" onclick="tgl('toastermob')"></i>


        </nav>

        <div class="toastermob" id="toastermob">
            <ul>
                <a href="/myappointments">
                    <li>My Appointments</li>
                </a>
                <a href="/medicalrecords">
                    <li>Medical Records</li>
                </a>
                <a href="/settings">
                    <li>Settings</li>
                </a>
                <a href="#">
                    <li>My payments</li>
                </a>
                <a href="/logout">
                    <li>Logout</li>
                </a>
            </ul>
        </div>

        <!--Desktop-->
        <div class="head2-container">
            <nav class="head2">


                <a href="/index"><img src="https://s3.ap-south-1.amazonaws.com/appdev.konfinity.com/css/tasks/Logo.jpg"
                        alt="logo" /></a>


                <ul>
                    <a href="/doctor">
                        <li>Doctor</li>
                    </a>
                    <a href="/hospital">
                        <li>Hospital</li>
                    </a>
                    <a href="/treatment">
                        <li>Treatment</li>
                    </a>

                    <a href="/aboutUs">
                        <li>About</li>
                    </a>
                </ul>
                <div>
                    <a href="/tvastraplus"> <button class="btn_blue">TVASTRA PLUS</button> </a>
                    <a href="/queryform"> <button class="btn_darkblue">Get a Quote</button></a>
                    <div id="user">
                        <button class="btn_white" onclick="tgl('toaster')">
                            <%=username%>
                        </button>
                        <i class="fa fa-angle-down"></i>

                    </div>

            </nav>
        </div>
    </header>
    <div class="toaster" id="toaster">
        <div>

            <a href="/profile">
                <figure id="toaster-img">

                    <img id="headerpic" src="<%=image%>">

                </figure>
            </a>

            <h5>
                <%=username%>
            </h5>
        </div>
        <ul>
            <a href="/myappointments">
                <li>My Appointments</li>
            </a>
            <a href="/medicalrecords">
                <li>Medical Records</li>
            </a>
            <a href="/settings">
                <li>Settings</li>
            </a>
            <a href="#">
                <li>My payments</li>
            </a>
            <a href="/logout">
                <li>Logout</li>
            </a>
        </ul>
    </div>

    <section class="main-section">
        <div class="mobile-tab">
            <div class="grid-for-dashboard">
                <i class='fas fa-angle-double-right'></i>
                <h3>Click To View Dashboard</h3>
            </div>
        </div>
        <div class="desktop">
            <div class="grid-for-dashboard">
                <i class='fas fa-angle-double-right'></i>
                <h3>Dashboard</h3>
            </div>
            <div class="dashboard">
                <div class="  active-btn" id="profile-btn">
                    <i class='fa fa-address-book'></i>
                    <h3>Profile</h3>
                </div>

                <div class=" inactive-btn" id="appointments-btn">
                    <i class='fa fa-address-book'></i>
                    <h3>Appointments</h3>
                </div>

                <a href="/medicalreport">
                <div class=" inactive-btn" id="reports-btn">
                    <i class='fa fa-address-book'></i>
                    <h3>Medical Reports</h3>
                </div>
                </a>

                <% if(isDoctor){%>
                <a href="/addschedule">
                    <div class=" inactive-btn" id="schedule-btn">

                        <i class='fa fa-address-book'></i>
                        <h3>Add Schedule</h3>

                    </div>
                </a>
                <%}%>

                <a href="/settings">
                <div class="inactive-btn" id="settings-btn">

                    <i class='fa fa-address-book'></i>
                    <h3>Settings</h3>
                </div>
                </a>
            </div>
        </div>
        <div class="form-div">

            <form class="medical-record-form" action="/updateprofile" enctype="multipart/form-data" method="POST"
                id="profile">
                <div class="medical-record">
                    <h2>My Profile</h2>
                    <button type="submit" class="btn_blue">Save Changes</button>
                </div>

                <div class="wrap">
                    <div class=profile-photo-name>
                        <h4>Profile Photo</h4>
                        <div class="photo-and-text">
                            <figure>
                                <img id="output" src="<%=image%>">
                            </figure>
                            <div class="text">
                                <p>Pic a photo from your system</p>
                                <label for="upload-pic" class="inputLabel picInputLabel">Select Photo</label>
                                <input type="file" name="image" id="upload-pic" accept="image/*"
                                    onchange="document.getElementById('output').src = window.URL.createObjectURL(this.files[0])">
                            </div>

                        </div>
                    </div>
                    <div class="label_input">
                        <label for="name">Name</label>
                        <input name="name" id="name" value="<%=username%>" required>
                    </div>
                </div>

                <div class="details">
                    <div class="label_input">
                        <label for="mobileno">Phone Number</label>
                        <input name="mobileno" id="mobileno" value="<%=mobileno%>" readonly required>
                    </div>

                    <div class="label_input">
                        <label for="email">Email</label>
                        <input name="email" id="email" value="<%=email%>" required>
                    </div>

                    <div class="label_input">
                        <label for="gender">Gender</label>
                        <input name="gender" id="gender" value="<%=gender%>" required>
                    </div>

                    <div class="label_input">

                        <label for="dob">Date of Birth</label>
                        <input name="dateofbirth" id="dob" value="<%=dateofbirth%>" required class="maxdateset">
                    </div>


                    <div class="label_input">
                        <label for="timezone">Time Zone</label>
                        <input name="timezone" id="timezone" value="">
                    </div>
                </div>


                <div class="addr-details">
                    <div class="label_input">
                        <label for="house-number">House Number/Street</label>
                        <input name="house-number" id="house-number" value="">
                    </div>

                    <div class="label_input">
                        <label for="colony">Colony/Locality</label>
                        <input name="colony" id="colony" value="">
                    </div>

                    <div class="label_input">
                        <label for="city">City</label>
                        <input name="city" id="city" value="<%=city%>" required >
                    </div>

                    <div class="label_input">
                        <label for="state">State</label>
                        <input name="state" id="state" value="<%=state%>" required>
                    </div>

                    <div class="label_input">
                        <label for="country">Country</label>
                        <input name="country" id="country" value="<%=country%>" required>
                    </div>
                </div>

                <% if(isDoctor){%>
                    <div class="doc-details">
                        <div class="label_input">

                            <label for="hospitals">Your Hospital</label>
                            <input name='hospitals' id="hospitals" class='some_class_name' value=<%=hospitals%> required>
                        </div>
                        <div class="label_input">
                            <label for="achievements">Achievements</label>
                            <input name='achievements' class='some_class_name' placeholder='write some tags'
                                value=<%=achievements%> required>
                        </div>

                        <div class="label_input">
                            <label for="exp">Experience</label>
                            <input type="number" id="exp" name="exp" value=<%=exp%> required>
                        </div>

                        <div class="label_input">
                            <label for="qualification">Qualification</label>
                            <input name='qualification' id="qualification" class='some_class_name'
                                placeholder='write some tags' value=<%=qualification%> required>
                        </div>

                        <div class="label_input">
                            <label for="awards">Awards</label>
                            <input name='awards' id="awards" class='some_class_name' placeholder='write some tags'
                                value=<%=awards%>>
                        </div>

                        <div class="label_input">

                            <label for="specialization">Specialization</label>
                            <input name='specialization' id="specialization" class='some_class_name'
                                placeholder='write some tags' value=<%=specialization%>>
                        </div>

                        <div class="label_input">

                            <label for="fees">Your average Fees</label>
                            <input type="number" id="fees" name="fees" value=<%=fees%>>
                        </div>








                    </div>
                    <div class="label_input textarea-div">

                        <label for="description">Describe Yourself</label>
                        <textarea id="description" name="description" rows="2"><%=description%>
                            </textarea>

                    </div>
                    <%}%>
            </form>





        </div>




        <script>


            var input = document.querySelector('input[name=hospitals]');

            var input2 = document.querySelector('input[name=achievements]');
            var input3 = document.querySelector('input[name=qualification]');
            var input4 = document.querySelector('input[name=awards]');
            var input5 = document.querySelector('input[name=specialization]');


            // initialize Tagify on the above input node reference
            new Tagify(input)
            new Tagify(input2)
            new Tagify(input3)
            new Tagify(input4)
            new Tagify(input5)

        </script>
        </section>
        <!--Need Help-->
    <section class="nd_help">
        <div class="nd_help1">
            <h2>Need Help?</h2>
            <p>Just let us know we will happy to assist you</p>
        </div>
        <div class="btn2 nd_help2">
            <button type="submit" class="btn_blue">Submit your enquiry</button>
        </div>
    </section>

    <%-include('footer.ejs')%>

</body>

</html>